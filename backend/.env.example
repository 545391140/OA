# ==============================================
# 环境变量配置模板
# 复制此文件为 .env 并填入真实值
# 命令: cp .env.example .env
# ==============================================

# 环境配置
NODE_ENV=development
PORT=3001

# ==============================================
# 数据库配置 (必需)
# ==============================================
# 开发环境示例: mongodb://localhost:27017/travel-expense-dev
# 生产环境示例: mongodb+srv://username:password@host/database
MONGODB_URI=mongodb://localhost:27017/travel-expense-dev

# ==============================================
# JWT配置 (必需)
# ==============================================
# 生产环境必须设置强密钥（至少32字符）
# 生成命令: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRE=7d

# ==============================================
# 邮件配置 (可选)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# ==============================================
# 文件上传配置 (可选)
# ==============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==============================================
# 速率限制配置 (可选)
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# AI服务配置 (可选)
# ==============================================
# Mistral AI API密钥
MISTRAL_API_KEY=

# 阿里云百炼API密钥
DASHSCOPE_API_KEY=

# ==============================================
# 携程商旅API配置 (生产环境必需)
# ==============================================
# 联系携程商旅平台获取
CTRIP_APP_KEY=your_ctrip_app_key
CTRIP_APP_SECURITY=your_ctrip_security_key

# ==============================================
# 前端URL配置 (可选)
# ==============================================
FRONTEND_URL=http://localhost:3000
